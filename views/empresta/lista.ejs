<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <title>Empréstimos</title>
    <meta charset="UTF-8">
    <link href="/style.css" type="text/css" rel="stylesheet">
  </head>
  <body>
    <%- include('nav.html'); %>
    <section id="lista">
      <h1>Lista de Empréstimos</h1>
      <a  href="/">Voltar para a página inicial</a> &nbsp;
      <a  href="/formEmpresta?IDempresta=-1">Cadastrar um novo Empréstimo</a>
      </br>
      <table border="1" bordercolor="#4B0082" cellpadding="0" cellspacing="0">
        <tr>
          <th colspan="2"></th>
          <th>Id. Empréstimo</th>
	        <th>Id. Usuário</th>
          <th>Nome do Usuário</th>
          <th>E-mail do Usuário</th>
    		  <th>Id. Mangá</th>
          <th>Nome do Mangá</th>
          <th>Data do empréstimo</th>
          <th>Data de devolução</th>
          <th>Estado</th>
        </tr>
      <% Empresta.forEach((emprest, index) => { %> &nbsp;
        <tr>
          <td
            ><a href="/formEmpresta?idempresta=<%= emprest.IDempresta %>">Atualizar</a></td>
          <td>
            <a href="/excluirEmpresta?idempresta=<%= emprest.IDempresta %>">Excluir</a></td>
          <td><%= emprest.IDempresta %></td>
          <td><%= emprest.idUSUARIO %></td>
          <td><%= emprest.nomeUS %></td>
          <td><%= emprest.emailUS %></td>
          <td><%= emprest.IDmanga %></td>
          <td><%= emprest.nomeMA %></td>
          <td><%= emprest.dataEmpresta %></td>
          <td><%= emprest.dataDevolve %></td>
          <td><%= emprest.estado %></td>
        </tr>       
      <% }) %>
    </table>
  </section>
  &nbsp;
 <%- include('footer.html'); %>
  </body>
</html>