<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8">
    <title>Cadastro de Usuários</title>
    <link href="/style.css" type="text/css" rel="stylesheet">

    <script language="javascript">
      function validarInf(){
        var nome = document.getElementById('nome').value;
        var senha = document.getElementById('senha').value;
        var email = document.getElementById('email').value;
        var datanasc = document.getElementById('datanasc').value;

        if (nome == ''){
        alert("O campo nome é obrigatório");
        return false;
        }

        if (email == ''){
        alert("O campo e-mail é obrigatório");
        return false;
        }

        if (senha == ''){
        alert("O campo senha é obrigatório");
        return false;
        }  
      
      //var patternData = /^[0-9]{2}\/[0-9]{2}\/[0-9]{4}$/;
        //if(datanasc == '' || !patternData.test(datanasc)) {
         //alert("Digite a data no formato dd/mm/aaaa");
         //return false;
        //}
        return true;
      }
    </script>
    
  </head>
  <body>
    <center>
      <%- include('nav.html'); %>
      <h1>Cadastro de Usuários</h1>
      <form action="salvar" method="post" onsubmit="return validarInf()">
      
        <input type="hidden" name="id" value="<%= (usuarios.length > 0 ? usuarios[0].idUSUARIO:-1) %>" id="id"><br>

        <label for="nome">Nome:</label>
        <input type="text" class="form" name="nome" id="nome" value="<%= (usuarios.length > 0 ? usuarios[0].nome: "") %>" size="30"><br>

        <label for="email">E-mail:</label>
        <input type="email" class="form" name="email" id="email" value="<%= (usuarios.length > 0 ? usuarios[0].email: "") %>" placeholder="exemplo@dominio.com" size="30"><br>

        <label for="senha">Senha:</label>
        <input type="password" class="form" name="senha" id="senha" value="<%= (usuarios.length > 0 ? usuarios[0].senha:"") %>" size="30" pattern="[0-9a-fA-F]{8,30}"><br>

        <label for="datanasc">Data de Nascimento:</label>
        <input type="date" class="form" name="datanasc" id="datanasc" value="<%= (usuarios.length > 0 ? usuarios[0].data_nasc:"") %>" size="30" pattern="[0-9]{2}/[0-9]{2}/[0-9]{4}"><br>
        
        <br>
        <input type="submit" class="botao" name="acao" value="Salvar">
        <input type="submit" class="botao" name="acao" value="Cancelar">
        <input type="reset" class="botao" value="Limpar">
      </form>
    </center>
  <%- include('footer.html'); %>
  </body>
</html>
